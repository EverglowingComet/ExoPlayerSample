<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.comet.androidstreaming.view.CustomPlayerView
        android:id="@+id/player_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageButton
        android:id="@+id/refresh_button"
        android:layout_width="@dimen/refresh_btn_size"
        android:layout_height="@dimen/refresh_btn_size"
        android:layout_gravity="top|right"
        android:layout_margin="@dimen/refresh_btn_margin"
        android:background="@null"
        android:scaleType="fitXY"
        android:src="@drawable/refresh_normal"/>
</FrameLayout>